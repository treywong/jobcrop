<nav class="navbar navbar-expand-lg navbar-light bg-white card p-0">
  <div class="container-fluid p-0">
    <%= link_to root_path, class:'text-center navbar-brand m-0 col-2' do %>
      <img src="/assets/jobcrop_logo.png" width="30" height="30" alt="">
    <% end %>
  </div>
</nav>
<div class="new-employer-cover"></div>
<div class="container side-container d-flex flex-fill align-items-center">
  <div class="w-100">
    <h2 class="text-center font-weight-bold text-muted mb-4">Jobhunter Application</h2>
    <%=form_with(scope: :jobhunter, url: user_jobhunter_index_path(@user.id), method: 'POST', local:true) do |f| %>
      <div class="form-group">
        <%=f.label "What work title are you expecting to get?", class: 'text-muted font-weight-bold'%>
        <%=f.text_field :title_expectation, class:'form-control'%>
      </div>
      <div class="form-group">
        <%=f.label "What position in the company are you expecting to get?", class: 'text-muted font-weight-bold'%>
        <%= f.select(:position_expectation,
                      options_for_select([
                        ['',''],
                        ['Corporate Level', 'Corporate Level'],
                        ['Management Level', 'Management Level'],
                        ['Administration', 'Administration'],
                        ['Operation', 'Operation'],
                        ['Others', 'Others']
                      ]), {},
                      {class: 'custom-select d-block mr-auto'}) %>
      </div>
      <div class="form-group">
        <%=f.label "What is your expected salary range?", class: 'text-muted font-weight-bold'%>
        <%=f.select(:salary_expectation,
                    options_for_select([
                      ['',''],
                      ['< RM2000', '< RM2000'],
                      ['RM2000 - RM10,000', 'RM2000 - RM10,000'],
                      ['RM10,000 >', 'RM10,000 >']
                      ]), {},
                      {class: 'custom-select d-block mr-auto'}) %>
      </div>
      <div class="form-group">
        <%=f.label "Any other preferences you would like to set?", class: 'text-muted font-weight-bold'%>
        <%=f.text_area :preferences, class: 'form-control'%>
      </div>
      <%=f.submit "Create Preferences", class: 'btn btn-primary'%>
    <%end%>
  </div>
</div>
