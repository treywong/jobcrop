<!-- receiver name -->
<h1>New message to <%= @receiver.email %></h1>

<%= form_for @personal_message, url: sending_message_path(@receiver.id), method: 'post' do |f| %>
  <%= hidden_field_tag 'receiver_id', @receiver.id %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit %>
<% end %>