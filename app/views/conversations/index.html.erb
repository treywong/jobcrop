<% content_for :navbar_user do %>
  <% if signed_in? %>
    <%= render partial: "navbar/user_navbar" %>
  <% else %>
    <%= render partial: "navbar/visitor_navbar" %>
  <% end %>
<% end %>
<div class="container  p-0 conversation-container card">
  <nav class="navbar navbar-light card bg-light">
    <span class="navbar-text">Your Messages</span>
  </nav>
   <div class="row h-100">
     <div class="col-4 pr-0 border-right h-100 contact-list">
       <ul id="conversations" class="list-unstyled">
         <%= render @conversations %>
       </ul>
     </div>
     <div class="col-8 pl-0 d-flex flex-column chatroom">
     </div>
   </div>
</div>
